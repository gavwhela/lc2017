User
    username Text
    UniqueUser username
    password ByteString
    emailAddress Text
    verified Bool
    verifyKey Text
    resetPasswordKey Text
    deriving Typeable
Comment
    message Textarea
    userId UserId
    postId PostId
    deriving Eq
    deriving Show
Post
    title Text
    author Text
    created UTCTime
    body Text

